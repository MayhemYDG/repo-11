<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Charcoal.Dark.Bridge" parent="@style/Theme.MaterialComponents.Bridge">
        <!-- region Charcoal token attributes -->
        <!-- Brand -->
        <item name="colorCharcoalBrand">@color/charcoal_color_brand_dark</item>
        <item name="colorCharcoalBrandDark">@color/charcoal_brand_dark</item>

        <!-- Semantic -->
        <item name="colorCharcoalAssertive">@color/charcoal_color_assertive_dark</item>
        <item name="colorCharcoalWarning">@color/charcoal_color_warning_dark</item>
        <item name="colorCharcoalSuccess">@color/charcoal_color_success_dark</item>
        <item name="colorCharcoalUpdatedItem">@color/charcoal_color_updated_item_dark</item>
        <item name="colorCharcoalLike">@color/charcoal_like</item>
        <item name="colorCharcoalPremium">@color/charcoal_premium</item>
        <item name="colorCharcoalMarker">@color/charcoal_marker</item>

        <!-- Surface -->
        <item name="colorCharcoalBackground1">@color/charcoal_color_background1_dark</item>
        <item name="colorCharcoalBackground2">@color/charcoal_color_background2_dark</item>

        <item name="colorCharcoalSurface1">@color/charcoal_color_surface1_dark</item>
        <item name="colorCharcoalSurface2">@color/charcoal_color_surface2_dark</item>
        <item name="colorCharcoalSurface3">@color/charcoal_color_surface3_dark</item>
        <item name="colorCharcoalSurface4">@color/charcoal_color_surface4_dark</item>
        <item name="colorCharcoalSurface6">@color/charcoal_color_surface6_dark</item>
        <item name="colorCharcoalSurface9">@color/charcoal_color_surface9_dark</item>
        <item name="colorCharcoalSurface10">@color/charcoal_color_surface10_dark</item>

        <!-- On Surface -->
        <item name="colorCharcoalLink1">@color/charcoal_color_link1_dark</item>

        <item name="colorCharcoalText1">@color/charcoal_color_text1_dark</item>
        <item name="colorCharcoalText2">@color/charcoal_color_text2_dark</item>
        <item name="colorCharcoalText3">@color/charcoal_color_text3_dark</item>
        <item name="colorCharcoalText4">@color/charcoal_color_text4_dark</item>
        <item name="colorCharcoalText5">@color/charcoal_color_text5_dark</item>

        <item name="colorCharcoalIcon6">@color/charcoal_color_icon6_dark</item>

        <item name="colorCharcoalBorder">@color/charcoal_color_border_dark</item>
        <!-- endregion -->

        <!-- region Material Theming color -->
        <item name="colorPrimary">?attr/colorCharcoalBrand</item>
        <item name="colorPrimaryVariant">?attr/colorCharcoalBrandDark</item>
        <item name="colorOnPrimary">?attr/colorCharcoalText5</item>
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorOnSecondary">?attr/colorOnPrimary</item>
        <item name="android:colorBackground">?attr/colorCharcoalBackground1</item>
        <item name="colorOnBackground">?attr/colorCharcoalText2</item>
        <item name="colorSurface">?attr/colorCharcoalSurface1</item>
        <item name="colorOnSurface">?attr/colorCharcoalText2</item>
        <item name="colorError">?attr/colorCharcoalAssertive</item>
        <item name="colorOnError">?attr/colorOnPrimary</item>
        <!-- endregion -->

        <!-- region AppCompat Theme -->
        <item name="colorPrimaryDark">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <!-- endregion -->

        <!-- Charcoal では Elevation Overlay を利用しないため無効化 -->
        <item name="elevationOverlayEnabled">false</item>
    </style>


    <style name="Theme.Charcoal.Dark.NoActionBar.Bridge" parent="Theme.Charcoal.Dark.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
